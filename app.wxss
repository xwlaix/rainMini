.container {
	height: 100%;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-direction: column;
	flex-direction: column;
	-webkit-justify-content: center;
	justify-content: center;
	box-sizing: border-box
}

.button-hover-class {
	-webkit-transform: translate(2px, 2px);
	-moz-transform: translate(2px, 2px)
}

.button-hover-class-shu {
	-webkit-transform: translate(0, 2px);
	-moz-transform: translate(0, 2px)
}

wx-button::after {
	border: none
}

wx-button {
	border-radius: 0;
	background-color: none
}

.my-toast {
	position: absolute;
	left: 0px;
	bottom: 200px;
	width: 100%;
	height: 50px;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-direction: row;
	flex-direction: row;
	-webkit-align-items: center;
	align-items: center;
	-webkit-justify-content: center;
	justify-content: center
}

.my-toast-view {
	max-width: 80%;
	padding: 10px;
	background: #4f4f4f;
	opacity: .9;
	border-radius: 5px;
	z-index: 999999
}

.my-toast-text {
	color: #fff;
	font-size: 16px
}