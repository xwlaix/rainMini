.box {
	position: fixed;
	top: 0;
	right: 0;
	z-index: 999;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: flex-end;
	justify-content: flex-end;
	-webkit-align-items: flex-end;
	align-items: flex-end;
	-webkit-flex-direction: column;
	flex-direction: column;
	width: 300px
}

.arrow {
	width: 0;
	height: 0;
	margin-right: 60px;
	border: 10px solid transparent;
	border-bottom-color: #34b5e2
}

.body {
	background-color: #34b5e2;
	box-shadow: 0 5px 10px -5px #34b5e2;
	border-radius: 6px;
	display: -webkit-flex;
	display: flex;
	-webkit-align-items: center;
	align-items: center;
	-webkit-justify-content: center;
	justify-content: center;
	height: 42px;
	padding: 0 10px;
	margin-right: 20px
}

.body>wx-text {
	color: #fff;
	font-size: 14px;
	font-weight: 400
}

.modal {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 999;
	background-color: hsla(0, 0%, 100%, .9);
	padding: 20px
}

.modal>wx-view {
	margin: 10px 0;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-direction: column;
	flex-direction: column
}

.modal>wx-view>wx-text {
	font-size: 16px;
	font-weight: 400;
	margin-bottom: 5px;
	color: #333
}

.modal>wx-view>wx-image {
	border-radius: 10px
}

.ok-btn {
	width: 100%;
	margin-top: 40px
}

.ok-btn,
.ok-btn>wx-view {
	display: -webkit-flex;
	display: flex;
	-webkit-align-items: center;
	align-items: center;
	-webkit-justify-content: center;
	justify-content: center
}

.ok-btn>wx-view {
	height: 40px;
	width: 120px;
	background-color: #34b5e2;
	box-shadow: 0 5px 10px -px #34b5e2;
	border-radius: 40px
}

.ok-btn>wx-view>wx-text {
	font-size: 14px;
	color: #fff;
	font-weight: 400
}

.btn-hover {
	opacity: .6
}