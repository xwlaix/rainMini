.my-dialog {
    opacity: 1;
    width: 100%;
    height: 100%;
}

.my-dialog .my-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 1000;
}

.my-dialog .my-container {
    position: fixed;
    width: 96%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    border-radius: 10px;
    z-index: 5000;
}

.my-dialog .my-container .title {
    display: inline-block;
    width: 100%;
    margin: 20rpx 0 0 0;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-weight: 400;
    font-size: 18px;
    color: #303133;
}

.my-dialog .my-container .bottom {
    bottom: 0;
    width: 100%;
    align-items: center;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 18px;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.my-dialog .my-container .bottom .cancel {
    width: 100%;
    height: 100%;
}

.ad_container {
    background-color: #dddddd;
    border-radius: 6px;
    overflow: hidden;
}

.cat_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.topcat {
    width: 100rpx;
    margin-top: 30rpx;
}

.content {
    margin-bottom: 20rpx;
    padding: 10rpx;
}

.text {
    padding-top: 6rpx;
    padding-bottom: 6rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    background-color: #ffffff;
    border: 2rpx solid #000000;
    border-radius: 40rpx;
    min-width: 200px;
}